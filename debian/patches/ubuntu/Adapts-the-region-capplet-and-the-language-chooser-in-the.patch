+        g_autoptr(GVariantIter) iter = NULL;
+        const gchar *key;
+        GVariant *value;
+        g_autoptr(GError) error = NULL;
+
+        if (g_strcmp0 (prop_name, "Language") != 0 && g_strcmp0 (prop_name, "FormatsLocale") != 0) {
+                g_warning ("Invalid argument: '%s'", prop_name);
+                return NULL;
+        }
