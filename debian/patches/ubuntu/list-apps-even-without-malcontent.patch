                                                  &error);
   if (error)
-    {
       g_warning ("Error retrieving app filter: %s", error->message);
-      return;
+  else
+    {
+      self->have_mc_runtime = TRUE;
+      self->app_filter_id = g_signal_connect (self->manager, "app-filter-changed",
+                                              G_CALLBACK (app_filter_changed_cb), self);
     }
-
-  self->app_filter_id = g_signal_connect (self->manager, "app-filter-changed",
